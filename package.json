{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "build": "NODE_ENV='production' turbo build ",
    "crowdin": "crowdin ",
    "crowdin:upload": "set -a && source .env.local && set +a &&  crowdin upload",
    "crowdin:download": "set -a && source .env.local && set +a && crowdin download",
    "crowdin:sync": "i18next-scanner --config tooling/i18next-scanner.config.js && set -a && soure .env.local && crowdin upload && crowdin download",
    "18next:scanner": "i18next-scanner --config tooling/i18next-scanner.config.js",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:push": "cd ./packages/db/ && bun db:push",
    "prod:db:push": "cd ./packages/db/ && bun prod:db:push",
    "deps:update1": "npm-check-updates --interactive --format group",
    "deps:update2": "npx npm-check-updates -ws --root --format group -i",
    "deps:update3": "bunx npm-check-updates --root --format group -i",
    "deps:update4": "bunx taze -I -r",
    "vercel:pull": "bun run vercel pull",
    "vercel:buildd": "bun run vercel build --debug",
    "vercel:build": "NODE_ENV=production bun run vercel build",
    "vercel:deploy_prebuilt": "bun run vercel deploy --prebuilt",
    "dev": "PORT=3000 turbo dev --parallel",
    "dev:web": "turbo dev --parallel --filter !stripe",
    "export": "next export",
    "format": "turbo format --continue -- --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "format:fix": "turbo format --continue -- --write --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "format:check": "npx prettier -c .",
    "format:prettier": "npx prettier --write .",
    "lint": "turbo lint -- --quiet -- --cache --cache-location 'node_modules/.cache/.eslintcache' && manypkg check",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache' ",
    "typecheck": "turbo typecheck",
    "kysely": "kysely ",
    "ntl": "ntl ",
    "netlify:dev": "netlify dev --filter @saasfly/nextjs ",
    "netlify:link": "netlify link --filter @saasfly/nextjs ",
    "ntl:open": "netlify open --filter @saasfly/nextjs ",
    "ntl:build": "ntl build --filter @saasfly/nextjs ",
    "ntl:deploy": "ntl deploy --filter @saasfly/nextjs",
    "ntl:std": "ntl deploy --build --filter @saasfly/nextjs ",
    "ntl:prod": "ntl deploy --prod --build --filter @saasfly/nextjs ",
    "postinstall": "bun run check-deps",
    "check-deps": "check-dependency-version-consistency .",
    "check-deps:find": "ncu -ws",
    "check-deps:globaql": "ncu -g",
    "check-deps:update": "ncu -ws -du ",
    "stripe:generate": "./tooling/stripe-tools/stripe-download.sh",
    "stripe:export": "stripe products list --expand data.default_price > apps/nextjs/src/config/price/products.dev.json && stripe prices list --expand=data.currency_options > apps/nextjs/src/config/price/prices.dev.json && cp apps/nextjs/src/config/price/*.dev.json apps/nextjs/src/config/price/*.json && bun run apps/nextjs/src/config/price/generate-pricing.js > apps/nextjs/src/config/price/stripe-pricing.dev.json && cp apps/nextjs/src/config/price/stripe-pricing.json apps/nextjs/src/config/price/stripe-pricing.dev.json",
    "gen": "turbo gen --config 'turbo/generators/config.ts'",
    "update": "bun run update",
    "telemetry:off": "turbo telemetry off",
    "tsc:build": "tsc -b apps/*  && tsc -b packages/*"
  },
  "devDependencies": {
    "@crowdin/cli": "^4.1.2",
    "@netlify/plugin-lighthouse": "^6.0.0",
    "@netlify/plugin-nextjs": "^5.7.1",
    "@prisma/client": "^5.19.1",
    "@tanstack/eslint-plugin-query": "^5.53.0",
    "@turbo/gen": "1.13.4",
    "check-dependency-version-consistency": "4.1.0",
    "eslint-config-turbo": "^2.1.1",
    "i18next-scanner": "^4.5.0",
    "i18next-scanner-typescript": "^1.2.1",
    "kysely-ctl": "^0.9.0",
    "netlify-cli": "^17.35.0",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwind-config-viewer": "^2.0.4",
    "turbo": "1.13.4",
    "typescript": "5.5.4",
    "vercel": "^37.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prettier": "@saasfly/prettier-config",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "packageManager": "bun@v1.1.26",
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "@vercel/speed-insights",
    "contentlayer2",
    "prisma",
    "protobufjs",
    "@tsparticles/engine",
    "esbuild",
    "netlify-cli",
    "puppeteer",
    "@netlify/edge-bundler/node_modules/esbuild",
    "@vercel/node/node_modules/esbuild",
    "@vercel",
    "@netlify"
  ]
}
