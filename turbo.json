{
  "$schema": "https://turborepo.org/schema.v1.json",
  "globalDependencies": ["**/.env", "**/.env.*local", "tsconfig.json"],
  "globalEnv": ["PACKAGE_VERSION", "NODE_ENV"],
  "globalPassThroughEnv": [
    "CROWDIN_PROJECT_ID", "CROWDIN_PERSONAL_TOKEN", "GITHUB_TOKEN",
    "TURBO_NO_UPDATE_NOTIFIER"
],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "*",
        "RESEND_API_KEY",
        "!NEXT_PUBLIC_GIT_*",
        "TINY_BIRD_API_KEY",
        "NODE_ENV",
        "VERCEL_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", "!.trunk/**", "!.vscode/**", "!.dockerignore",
      "!.prettierignore", "!.prettier", "!*.md",
       "!.env.example", "!i18n/**",   ".env.production.local",
       ".env.development.local",
       ".env.local",
       ".env.production",
       ".env"
      ]

    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputMode": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    }
  }

}
